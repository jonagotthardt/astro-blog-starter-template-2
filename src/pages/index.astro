<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ZenSMP • Java & Bedrock</title>
    <meta name="description" content="Minecraft server: Java & Bedrock • Versions 1.8–1.21.8 • Main color: green • IPs: zensmp.de & bedrock.zensmp.de:2432" />
    <meta name="theme-color" content="#11d36a" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
    <style>
      :root { --green:#11d36a; --bg-0:#050607; --bg-1:#0b0f10; --glass:rgba(255,255,255,0.06); --text:#e9f5ee; --muted:#a7b9b0; }
      *{box-sizing:border-box} html,body{height:100%}
      body{
        margin:0;color:var(--text);font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,sans-serif;
        background:radial-gradient(1200px 800px at 80% -10%, rgba(17,211,106,0.07), transparent 60%),
                   radial-gradient(800px 600px at -10% 20%, rgba(17,211,106,0.08), transparent 60%),
                   linear-gradient(180deg, var(--bg-0), var(--bg-1));
        overflow-x:hidden;
      }
      .grid-bg::before{content:"";position:fixed;inset:0;pointer-events:none;z-index:0;
        background-image:linear-gradient(to right, rgba(255,255,255,0.06) 1px, transparent 1px),
                         linear-gradient(to bottom, rgba(255,255,255,0.06) 1px, transparent 1px);
        background-size:64px 64px;mask-image:radial-gradient(60% 60% at 50% 40%, black, transparent 80%);
      }
      header{position:sticky;top:0;z-index:50;backdrop-filter:blur(10px);
        background:linear-gradient(to bottom, rgba(5,6,7,0.7), rgba(5,6,7,0.2));border-bottom:1px solid rgba(255,255,255,0.06)}
      .wrap{max-width:1100px;margin:0 auto;padding:20px}
      .brand{display:flex;align-items:center;gap:12px;font-weight:800;letter-spacing:.4px}
      .logo{width:28px;height:28px;border-radius:8px;background:conic-gradient(from 0deg, var(--green), #8ff5c3, var(--green));
        box-shadow:0 0 30px rgba(17,211,106,0.6), inset 0 0 10px rgba(255,255,255,0.2)}
      nav a{color:var(--muted);text-decoration:none;margin-left:18px;font-weight:600}
      nav a:hover{color:var(--text)}
      .hero{position:relative;padding:84px 20px 60px;text-align:center}
      .super{display:inline-block;padding:8px 14px;border-radius:999px;background:rgba(17,211,106,0.1);
        border:1px solid rgba(17,211,106,0.25);color:#bff8dc;font-weight:700;letter-spacing:.4px}
      h1{font-size:clamp(40px,7vw,84px);line-height:.95;margin:18px 0 14px}
      .grad{background:radial-gradient(100% 100% at 50% 0%, #d7ffe8 0%, #8ff5c3 30%, var(--green) 60%, #0aff72 100%);
        -webkit-background-clip:text;background-clip:text;color:transparent;filter:drop-shadow(0 6px 20px rgba(17,211,106,0.28))}
      .lead{max-width:780px;margin:0 auto;font-size:clamp(16px,2.2vw,20px);color:var(--muted)}
      .cta{margin-top:26px;display:flex;gap:14px;justify-content:center;flex-wrap:wrap}
      .btn{position:relative;display:inline-flex;align-items:center;gap:10px;padding:14px 18px;border-radius:14px;font-weight:800;text-decoration:none;border:1px solid rgba(255,255,255,0.12)}
      .btn-primary{background:radial-gradient(120% 120% at 50% 0%, rgba(17,211,106,0.2), rgba(17,211,106,0.08));
        box-shadow:0 12px 40px -10px rgba(17,211,106,0.45), inset 0 0 0 1px rgba(17,211,106,0.4)}
      .btn:hover{transform:translateY(-1px);box-shadow:0 14px 40px -8px rgba(17,211,106,0.5)}
      .btn:active{transform:translateY(0)}
      .cards{display:grid;grid-template-columns:repeat(12,1fr);gap:18px;margin:40px auto 20px;max-width:1100px;padding:0 20px}
      .card{grid-column:span 12;background:linear-gradient(180deg, rgba(255,255,255,0.08), rgba(255,255,255,0.02));
        border:1px solid rgba(255,255,255,0.08);border-radius:18px;padding:20px;position:relative;overflow:hidden;backdrop-filter:blur(6px)}
      .card[data-tilt]{transform-style:preserve-3d;transition:transform 120ms ease, box-shadow 200ms ease}
      .card:hover{box-shadow:0 20px 60px -22px rgba(17,211,106,0.5)}
      .card h3{margin:0 0 10px;font-size:22px}
      .card p{margin:0;color:var(--muted)}
      .kicker{font-weight:800;text-transform:uppercase;letter-spacing:1px;font-size:12px;color:#c3ffe0}
      .pill{display:inline-flex;align-items:center;gap:8px;padding:8px 12px;border-radius:999px;background:rgba(17,211,106,0.12);border:1px solid rgba(17,211,106,0.3)}
      .mono{font-family:ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,\"Liberation Mono\",\"Courier New\",monospace}
      .muted{color:var(--muted)}
      .ipbox{display:flex;align-items:center;justify-content:space-between;gap:14px;padding:14px;border-radius:14px;background:var(--glass);border:1px solid rgba(255,255,255,0.1)}
      .copy{cursor:pointer;border:1px solid rgba(255,255,255,0.18);background:rgba(255,255,255,0.06);padding:10px 12px;border-radius:10px;font-weight:700}
      .copy:hover{background:rgba(255,255,255,0.1)}
      .two{grid-column:span 12} @media(min-width:860px){.two{grid-column:span 6}}
      .wave{position:absolute;inset:-60% -10% auto -10%;height:120%;z-index:-1;pointer-events:none;
        background:radial-gradient(45% 45% at 50% 35%, rgba(17,211,106,0.18), transparent 60%),radial-gradient(35% 35% at 60% 65%, rgba(17,211,106,0.12), transparent 60%);
        filter:blur(50px);animation:float 12s ease-in-out infinite alternate}
      @keyframes float{from{transform:translateY(0)}to{transform:translateY(-18px)}}
      .toast{position:fixed;left:50%;bottom:24px;transform:translateX(-50%) translateY(30px);opacity:0;background:#0f1a14;border:1px solid rgba(17,211,106,0.4);color:#bff8dc;padding:12px 14px;border-radius:12px;font-weight:700;box-shadow:0 10px 30px rgba(0,0,0,0.4);transition:240ms ease;z-index:100}
      .toast.show{transform:translateX(-50%) translateY(0);opacity:1}
      footer{margin:40px 0 80px;text-align:center;color:var(--muted)} footer a{color:#bff8dc;text-decoration:none;border-bottom:1px dashed rgba(191,248,220,0.5)}
      .selectable{user-select:all}
    </style>
  </head>
  <body>
    <div class="grid-bg"></div>
    <header>
      <div class="wrap" style="display:flex;align-items:center;justify-content:space-between;">
        <div class="brand"><div class="logo"></div> ZenSMP</div>
        <nav>
          <a href="#join">Join</a>
          <a href="#infos">Info</a>
          <a href="#faq">FAQ</a>
        </nav>
      </div>
    </header>

    <main>
      <section class="hero">
        <div class="wave"></div>
        <span class="super">Green. Fast. Community.</span>
        <h1><span class="grad">ZenSMP</span></h1>
        <p class="lead">Java & Bedrock – seamless crossplay. Supports versions <strong>1.8 – 1.21.8</strong>. Focus on performance, fair rules, and chill vibes.</p>
        <div class="cta">
          <a class="btn btn-primary" href="#join">⚡ Join now</a>
          <a class="btn" href="#infos">ℹ️ More info</a>
        </div>
      </section>

      <section id="join" class="cards">
        <article class="card two" data-tilt>
          <h3>Java Edition</h3>
          <p class="muted">Server address</p>
          <div class="ipbox mono selectable" style="margin-top:10px">
            <span id="java-ip">zensmp.de</span>
            <button class="copy" data-copy="#java-ip" data-label="Java IP copied!">Copy</button>
          </div>
          <p style="margin-top:12px" class="muted">Multiplayer → Add Server → Enter address → Join</p>
        </article>

        <article class="card two" data-tilt>
          <h3>Bedrock Edition</h3>
          <p class="muted">Server address & port</p>
          <div class="ipbox mono selectable" style="margin-top:10px; gap:10px; flex-wrap:wrap">
            <div style="display:flex; gap:10px; align-items:center;">
              <span id="bedrock-ip">bedrock.zensmp.de</span>
              <button class="copy" data-copy="#bedrock-ip" data-label="Bedrock IP copied!">Copy</button>
            </div>
            <div style="display:flex; gap:10px; align-items:center;">
              <span id="bedrock-port">Port: 2432</span>
              <button class="copy" data-copy="#bedrock-port" data-label="Port copied!">Copy</button>
            </div>
          </div>
          <p style="margin-top:12px" class="muted">Play → Servers → Add Server → Enter address & port → Join</p>
        </article>

        <article class="card" data-tilt>
          <div class="kicker">Compatibility</div>
          <h3>Versions</h3>
          <p>Supports <strong>1.8 – 1.21.8</strong>. Recommended: <span class="pill">Latest stable version</span></p>
        </article>

        <article id="infos" class="card" data-tilt>
          <div class="kicker">Why ZenSMP?</div>
          <h3>Glass look, soft edges, built to last</h3>
          <p>A server that looks clean and performs hard. Clear rules, active moderation, no pay-to-win. We use optimized settings, sensible add-ons, and a friendly community.</p>
        </article>

        <article id="faq" class="card" data-tilt>
          <div class="kicker">FAQ</div>
          <h3>Frequently Asked Questions</h3>
          <p><strong>Do I need mods?</strong> – No, vanilla-compatible.
             <br><strong>Crossplay?</strong> – Yes: Java & Bedrock (separate addresses, shared spawn/progress – server-side configured).
             <br><strong>Ping & performance?</strong> – EU hosting & optimized configurations.
          </p>
        </article>

        <article class="card" data-tilt>
          <div class="kicker">Diagnostics</div>
          <h3>Clipboard test</h3>
          <p>Click to test copy permissions. If blocked, text becomes selected for manual copy.</p>
          <div class="ipbox mono selectable" style="margin-top:10px">
            <span id="clip-test">TEST_COPY_VALUE</span>
            <button class="copy" data-copy="#clip-test" data-label="Test value copied!">Run copy test</button>
          </div>
        </article>
      </section>

      <div id="toast" class="toast" role="status" aria-live="polite">Copied!</div>
    </main>

    <footer>
      <p>© <span id="year"></span> ZenSMP • <a href="#">Rules</a> • <a href="#">Discord</a></p>
    </footer>

    <script>
      // Year without template syntax
      document.getElementById('year').textContent = new Date().getFullYear();

      // Tilt effect
      const maxTilt = 8;
      document.querySelectorAll('[data-tilt]').forEach(card => {
        card.addEventListener('mousemove', (e) => {
          const r = card.getBoundingClientRect();
          const px = (e.clientX - r.left) / r.width;
          const py = (e.clientY - r.top) / r.height;
          const rotY = (px - 0.5) * maxTilt * 2;
          const rotX = (0.5 - py) * maxTilt * 2;
          card.style.transform = `rotateX(${rotX}deg) rotateY(${rotY}deg)`;
        });
        card.addEventListener('mouseleave', () => {
          card.style.transform = 'rotateX(0) rotateY(0)';
        });
      });

      // Robust copy with Clipboard API fallback (handles blocked permissions)
      async function robustCopy(targetSelector, successLabel){
        const node = document.querySelector(targetSelector);
        if(!node) return;
        const text = node.innerText.replace(/^Port:\\s*/i, '');
        const toast = document.getElementById('toast');
        const showToast = (msg) => { toast.textContent = msg || 'Copied!'; toast.classList.add('show'); setTimeout(()=>toast.classList.remove('show'), 1400); };
        try {
          await navigator.clipboard.writeText(text);
          showToast(successLabel || 'Copied!');
          burst();
        } catch (err) {
          try {
            const range = document.createRange();
            range.selectNodeContents(node);
            const sel = window.getSelection();
            sel.removeAllRanges();
            sel.addRange(range);
            const ok = document.execCommand && document.execCommand('copy');
            if (ok) { showToast(successLabel || 'Copied!'); burst(); }
            else { showToast('Select & copy manually'); }
          } catch(e2){ showToast('Select & copy manually'); }
        }
      }

      // Delegate clicks for all copy buttons
      document.addEventListener('click', (e)=>{
        const btn = e.target.closest('.copy');
        if(!btn) return;
        robustCopy(btn.getAttribute('data-copy'), btn.getAttribute('data-label'));
      });

      // Minimal confetti
      function burst(){
        const n = 18;
        for(let i=0;i<n;i++){
          const s = document.createElement('span');
          s.style.position='fixed'; s.style.pointerEvents='none'; s.style.zIndex=90;
          s.style.width='6px'; s.style.height='6px'; s.style.borderRadius='999px';
          s.style.background='linear-gradient(180deg, #bff8dc, var(--green))';
          const x = (window.innerWidth/2) + (Math.random()*160-80);
          const y = window.innerHeight - 56;
          s.style.left = x+'px'; s.style.top = y+'px';
          document.body.appendChild(s);
          const dx = (Math.random()*2-1)*120; const dy = -(80 + Math.random()*80);
          const rot = Math.random()*360;
          s.animate([{transform:'translate(0,0) rotate(0deg)',opacity:1},{transform:`translate(${dx}px, ${dy}px) rotate(${rot}deg)`,opacity:0}],
            {duration:900+Math.random()*400,easing:'cubic-bezier(.2,.8,.2,1)'}).onfinish=()=>s.remove();
        }
      }
    </script>
  </body>
</html>
